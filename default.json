{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "Custom Renovate Config",
	"extends": [
		":separateMajorReleases",
		":combinePatchMinorReleases",
		":ignoreUnstable",
		":prImmediately",
		":prHourlyLimitNone",
		":prConcurrentLimitNone",
		":semanticPrefixChore",
		":ignoreModulesAndTests",
		":enableVulnerabilityAlerts",
		":rebaseStalePrs",
		"workarounds:doNotUpgradeFromAlpineStableToEdge"
	],
	"recreateWhen": "auto",
	"pruneStaleBranches": true,
	"prFooter": "This PR has been generated by [Renovate Bot](https://docs.renovatebot.com).",
	"labels": [
		"dependencies",
		"renovate"
	],
	"vulnerabilityAlerts": {
		"labels": [
			"security",
			"dependencies",
			"renovate"
		]
	},
	"customManagers": [
		{
			"customType": "regex",
			"fileMatch": [
				"workflows\/.*y[a]?ml$"
			],
			"matchStrings": [
				"go-version: '(?<currentValue>[^']+)"
			],
			"depNameTemplate": "golang-version",
			"datasourceTemplate": "golang-version"
		},
		{
			"customType": "regex",
			"fileMatch": [
				"workflows\/.*y[a]?ml$"
			],
			"matchStrings": [
				"editorconfig-checker@(?<currentValue>[^\\s]+)"
			],
			"depNameTemplate": "github.com/editorconfig-checker/editorconfig-checker",
			"datasourceTemplate": "go"
		}
	],
	"packageRules": [
		{
			"matchPackagePatterns": [
				"*"
			],
			"commitMessagePrefix": "Dependency Update: {{manager}}"
		},
		{
			"groupName": "all non-major dependencies (exclude 0.x.y)",
			"groupSlug": "all-minor-patch-semver",
			"matchPackagePatterns": [
				"*"
			],
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"matchCurrentValue": "!/^([\\^~<=>v]+)?0\\./"
		},
		{
			"matchManagers": [
				"docker-compose",
				"dockerfile"
			],
			"addLabels": [
				"docker"
			]
		},
		{
			"matchManagers": [
				"github-actions"
			],
			"addLabels": [
				"actions",
				"pipeline"
			]
		},
		{
			"matchManagers": [
				"gradle",
				"gradle-wrapper"
			],
			"addLabels": [
				"gradle"
			]
		},
		{
			"matchManagers": [
				"maven",
				"maven-wrapper"
			],
			"addLabels": [
				"maven"
			]
		},
		{
			"matchManagers": [
				"npm"
			],
			"addLabels": [
				"node"
			]
		}
	]
}
